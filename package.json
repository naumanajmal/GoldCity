{
  "name": "weather-monitoring-system",
  "version": "1.0.0",
  "description": "Secure, scalable weather monitoring system with real-time updates",
  "main": "dist/server.js",
  "scripts": {
    "dev:backend": "nodemon --exec ts-node src/server.ts",
    "dev:ingestion": "nodemon --exec ts-node src/services/ingestionService.ts",
    "dev:frontend": "cd client && npm run dev",
    "build:backend": "tsc",
    "build:frontend": "cd client && npm run build",
    "migrate:latest": "knex migrate:latest --knexfile src/config/knexfile.ts",
    "migrate:rollback": "knex migrate:rollback --knexfile src/config/knexfile.ts",
    "start": "node dist/server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "keywords": [
    "weather",
    "real-time",
    "websocket",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.0.1",
    "mysql2": "^3.6.5",
    "node-cron": "^3.0.3",
    "socket.io": "^4.6.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.5",
    "@types/node-cron": "^3.0.11",
    "axios-mock-adapter": "^1.22.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "nodemon": "^3.0.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
